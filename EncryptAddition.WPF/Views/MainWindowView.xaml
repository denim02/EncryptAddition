<Window x:Class="EncryptAddition.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EncryptAddition.WPF.Views"
        WindowStartupLocation="CenterScreen"
        Title="EncryptAddition" MinHeight="650" MinWidth="1000" ResizeMode="CanResize">

    <Grid>
        <TabControl>
            <!-- First Tab: Benchmark Tab -->
            <TabItem Header="Benchmarking">
                <local:BenchmarkTabView />
            </TabItem>

            <!-- Second Tab: Encrypt/Decrypt Tab -->
            <TabItem Header="Encrypt/Decrypt" Margin="-2,0,-2,0">
                <local:EncryptTabView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>